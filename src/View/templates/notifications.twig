{% extends "base.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('notifications.css', 'css') }}">
{% endblock stylesheets %}
{% block navbar %}

    {#No logeado#}
    {% if logged == false %}
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
            </ul>
        </div>
        {% endif %}

    {#logeado#}
    {% if logged != false %}
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <strong>Opciones</strong>
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/upload-image">Añadir imagen</a></li>
                        <li><a href="/user-images">Imágenes subidas</a></li>
                        <li><a href="/user-comments">Comentarios del usuario</a></li>
                        <li><a href="/logout">Cerrar sesion</a></li>
                    </ul>
                </li>
                <li><a href="/edit-profile" class="dropdown-toggle" >
                        {#<span class="glyphicon glyphicon-user"></span> #}
                        <img  src="{{ asset('/profile_img/'~img~'.jpg','img') }}" height="25" width="25" >
                        <strong> {{ name }}</strong>
                    </a>
                </li>
            </ul>
        </div>
    {% endif %}

{% endblock navbar %}

{% block content %}
    <div class="container-fluid bg-1 text-center">
        <div class="row">

                {#{% for notification in notifications %}#}
                    <div class="jumbotron">
                        <div class="row">
                            <div class="col-md-2">
                                <img  src="{{ asset('/profile_img/'~img~'.jpg','img') }}" height="100" width="100" >
                            </div>
                            <div class="col-md-8">
                                <div>
                                    <h4>Notificación</h4>
                                    <h6 class="text-notification">El usuario pepito ha dado like</h6>
                                 </div>
                            </div>
                        </div>
                    </div>
                {#{% endfor %}#}
        </div>
    </div>

{% endblock content %}
