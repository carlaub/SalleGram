{% extends "register.twig" %}

{% block navbar %}

    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/">Home</a></li>
        </ul>
    </div>

{% endblock navbar %}


{% block content %}

    <div class="container">
        <h1 class="text-muted">Edita tu perfil</h1>
        <hr>
        <div class="row">

            <div class="col-md-9 personal-info">


                <form class="form-horizontal" enctype="multipart/form-data" id="editUserForm" action="/edit_profile/form" method="POST">

                    {#
                        All the fields are the same of register.twig except email, which is not editable.
                       edit_profile extends register.twig which extends base.twig
                    #}
                    {% block username_field %}

                        {{ parent() }}

                    {% endblock username_field %}

                    {% block editable_fields %}

                        {{ parent() }}

                    {% endblock editable_fields %}

                    <div class="form-group">
                        <label class="col-md-4 control-label text-muted"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn our-btn">Actualizar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>

{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('edit_profile.js', 'js') }}"></script>

{% endblock javascripts %}