{% extends "base.twig" %}


{% block meta %}
    <meta name="title" content="Login">
    <meta name="description" content="Formulari de login">
{% endblock meta %}

{% block navbar %}

    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/register">Register</a></li>
        </ul>
    </div>


{% endblock navbar %}

{% block content %}

    <div class="container">
        <br>
        <h1 class="text-muted">Login</h1>
        <hr>
        {% if errors.userOrPasswordError %}
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                            aria-hidden="true">×</span></button>
                <h4>Algo va mal...</h4>
                <p>{{ errors.stringUserOrPasswordError}}</p>

            </div>
        {% endif %}
        {% if errors.activeError %}
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                            aria-hidden="true">×</span></button>
                <h4>Algo va mal...</h4>
                <p>{{ errors.stringUserActiveError}}</p>

            </div>
        {% endif %}
        <div class="row">


            <div class="col-md-9 personal-info">

                <form class="form-horizontal" id=",loginUserForm" action="/login/form" method="POST">
                    <br>
                    <div class="form-group">
                        <label class="col-lg-3 control-label text-muted">Username/Email</label>
                        <div class="col-lg-8">
                            <input class="form-control " type="text" placeholder="Username/example@mail.com" name="usernameOrMail">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label text-muted">Contraseña:</label>
                        <div class="col-md-8">
                            <input class="form-control" type="password" placeholder="******" name="password">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label text-muted"></label>
                        <div class="col-md-8">
                            <input type="submit" class="btn btn-info" value="Login">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>


{% endblock content %}

