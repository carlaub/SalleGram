{% extends "base.twig" %}


{% block navbar %}

    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/register">Register</a></li>
        </ul>
    </div>


{% endblock navbar %}

{% block content %}

    <div class="container">
        <br>
        <h1 class="text-muted">Login</h1>
        <hr>
        <div class="row">


            <div class="col-md-9 personal-info">

                <form class="form-horizontal" id=",loginUserForm" action="/login/form" method="POST">
                    <br>
                    <div class="form-group">
                        <label class="col-lg-3 control-label text-muted">Username/Email</label>
                        <div class="col-lg-8">
                            <input class="form-control " type="text" placeholder="Username/example@mail.com" name="usernameOrMail">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label text-muted">Contrase√±a:</label>
                        <div class="col-md-8">
                            <input class="form-control" type="password" placeholder="******" name="password">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label text-muted"></label>
                        <div class="col-md-8">
                            <input type="submit" class="btn btn-primary" value="Login">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>


{% endblock content %}

